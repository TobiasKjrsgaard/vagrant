# Install and configure PHP Xdebug
xdebug_install: true

# Enable use of sendfile() in NGiNX
nginx_disable_sendfile: true

# Install the Avahi and Avahi Alias services
avahi_enabled: true

# Install the MailHog Service
mailhog_enabled: true

# Uncomment to disable dangerous wp-cli commands
# wp_disable_db_commands: true

# Define machine hostname
hostname: vagrant.local

# Password for root user on MySQL database server
# The `mysql_root_password` var is set in a global host_vars file

# Basic web server configuration
www_root: /var/www
